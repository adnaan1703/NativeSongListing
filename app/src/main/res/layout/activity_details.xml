<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.konel.kryptapps.nativesonglisting.features.details.DetailsActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">


            <ImageView
                android:id="@+id/ivSong"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/image"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/ivSong"
                android:textColor="@color/textPrimary"
                android:textSize="24sp"
                tools:text="Linkin Park" />

            <TextView
                android:id="@+id/tvArtistLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivSong"
                android:layout_marginTop="8dp"
                android:text="@string/artist"
                android:textColor="@color/textSecondary" />

            <TextView
                android:id="@+id/tvArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tvArtistLabel"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/tvArtistLabel"
                android:textColor="@color/textPrimary"
                tools:text="Chris Martin" />

            <TextView
                android:id="@+id/tvGenreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvArtistLabel"
                android:layout_marginTop="16dp"
                android:text="@string/genre"
                android:textColor="@color/textSecondary" />

            <TextView
                android:id="@+id/tvGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tvGenreLabel"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/tvGenreLabel"
                android:textColor="@color/textPrimary"
                tools:text="Alternate" />


            <TextView
                android:id="@+id/tvPriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvGenreLabel"
                android:layout_marginTop="16dp"
                android:text="@string/price"
                android:textColor="@color/textSecondary" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tvPriceLabel"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/tvPriceLabel"
                android:textColor="@color/textPrimary"
                tools:text="USD 7.99" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>
